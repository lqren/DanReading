<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
  >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
    <com.project.danreading.common.view.FixedImageView
        android:id="@+id/splash_iv"
        android:scaleType="fitXY"
        android:layout_width="480dp"
        android:layout_height="640dp"
       />

</ScrollView>
    <ImageView
        android:id="@+id/weread_logo_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160.0dip"
        android:scaleType="centerCrop"
        android:src="@drawable/welcome_weread" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/weread_logo_iv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="171.0dip"
        android:scaleType="centerCrop"
        android:src="@drawable/weread_signature" />


</RelativeLayout>